<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE TranscendenceExtension
[
	<!ENTITY UNIDExtensionRanxStuff "0xD0080001">
	<!ENTITY scRanxBomber  "0xD0080002">
	<!ENTITY scRanxFrigate "0xD0080003">
	<!ENTITY stRanxTurret  "0xD0080004">
	<!ENTITY rsRanxBomber  "0xD0080005">
	<!ENTITY rsRanxFrigate "0xD0080006">
	<!ENTITY rsRanxTurret  "0xD0080007">
]>

<TranscendenceExtension UNID="&UNIDExtensionRanxStuff;" version="1.0" 
	name="some Ranx ships" credits="ShivanHunter">
	
	<Image UNID="&rsRanxBomber;" bitmap="Resources/RanxBomber.jpg" bitmask="Resources/RanxBomberMask.bmp"> </Image>
	<Image UNID="&rsRanxFrigate;" bitmap="Resources/RanxFrigate.jpg" bitmask="Resources/RanxFrigateMask.bmp"> </Image>
	<Image UNID="&rsRanxTurret;" bitmap="Resources/RanxTurret.jpg" bitmask="Resources/RanxTurretMask.bmp"> </Image>
	
	<!-- The Ranx bomber fills the same niche as the Ares Tundra heavy gunship.
		It appears rarely and is armed with Lucifer missiles.-->
	
	<ShipClass UNID="&scRanxBomber;"
			manufacturer=		"Ranx"
			class=				""
			type=				"bomber"
			score=				"700"

			mass=				"100"
			cargoSpace=			"10"
			thrust=				"600"
			maneuver=			"4"
			rotationCount=		"40"
			maxSpeed=			"16"

			explosionType=		"&vtBlastExplosion2;"
			leavesWreck=		"60"

			attributes=			"genericClass,ranx"
			>

		<Armor>
			<ArmorSection start="315" span="90" armorID="&itDepletedUraniumArmor;"/>
			<ArmorSection start="225" span="90" armorID="&itDepletedUraniumArmor;"/>
			<ArmorSection start="135" span="90" armorID="&itDepletedUraniumArmor;"/>
			<ArmorSection start="45"  span="90" armorID="&itDepletedUraniumArmor;"/>
		</Armor>

		<Devices>
			<Device deviceID="&itNAMIMissileLauncher;"/>
			<Device deviceID="&itMonopoleDeflector;"/>
		</Devices>

		<Items>
			<Item count="3d12"	item="&itXM900Missile;" />
			<Item count="2d6"	item="&itXenotiteFuelRod;"/>
			<Table>
				<Item chance="75" count="3d5" item="&itHeliumAssembly;"/>
				<Item chance="30" count="1d2" item="&itLightArmorRepair;"/>
				<Item chance="10" count="1" item="&itMediumArmorRepair;"/>
			</Table>
		</Items>

		<Image imageID="&rsRanxBomber;" imageX="0" imageY="0" imageWidth="96" imageHeight="96"/>

		<AISettings
			fireRateAdj=		"35"
			fireAccuracy=		"90"
			perception=			"4"
			/>

		<DriveImages>
			<NozzleImage imageID="&rsDriveExhaust2;" imageX="0" imageY="0" imageWidth="48" imageHeight="48" imageFrameCount="0" imageTicksPerFrame="0"/>
			<NozzlePos x="-38" y="11"/>
			<NozzlePos x="-38" y="-11"/>
			<NozzlePos x="-42" y="20"/>
			<NozzlePos x="-42" y="-20"/>
		</DriveImages>
	</ShipClass>

	<!-- The Ranx Frigate is a light missile ship, a lighter version of the formidable Dreadnought. 
		It fires a Moskva 33 repeater and Broadsword missiles. -->

	<ShipClass UNID="&scRanxFrigate;"
			manufacturer=		"Ranx"
			class=				""
			type=				"frigate"
			score=				"1000"

			mass=				"5000"
			cargoSpace=			"5000"
			thrust=				"3000"
			maneuver=			"10"
			rotationCount=		"40"
			maxSpeed=			"10"

			cyberDefenseLevel=	"5"

			explosionType=		"&vtThermoExplosion1;"
			leavesWreck=		"100"

			attributes=			"capitalShip, genericClass, ranx"
			>

		<Armor>
			<ArmorSection start="300" span="60" armorID="&itTransuranicPlate;" />
			<ArmorSection start="240" span="60" armorID="&itTransuranicPlate;" nonCritical="general"/>
			<ArmorSection start="180" span="60" armorID="&itTransuranicPlate;" />
			
			<ArmorSection start="120" span="60" armorID="&itTransuranicPlate;" />
			<ArmorSection start="60" span="60" armorID="&itTransuranicPlate;" nonCritical="general"/>
			<ArmorSection start="0" span="60" armorID="&itTransuranicPlate;" />
		</Armor>

		<Devices>
			<Device deviceID="&itNAMIMissileLauncher;"/>
			<Device deviceID="&itShtormRepeater;" omnidirectional="true"/>
			<Device deviceID="&itPatchSpider;"/>
		</Devices>

		<Items>
			<Item count="3d16"	item="&itKM550Missile;" />
			<Item count="3d6"	item="&itXenotiteFuelRod;"/>
			<Table>
				<Lookup	chance="40"	count="1d3"		table="&trConsumables7;"/>
				<Lookup	chance="30"	count="1d2"		table="&trMinorItem7;"/>
				<Lookup	chance="30"	count="1"		table="&trMajorItem6;"/>
			</Table>
		</Items>

		<Image imageID="&rsRanxFrigate;" imageX="0" imageY="0" imageWidth="128" imageHeight="128"/>

		<AISettings
			aggressor=			"true"
			fireRateAdj=		"20"
			fireAccuracy=		"90"
			perception=			"6"
			/>

		<DriveImages>
			<NozzleImage imageID="&rsDriveExhaust2;" imageX="0" imageY="0" imageWidth="48" imageHeight="48" imageFrameCount="0" imageTicksPerFrame="0"/>
			<NozzlePos x="-56" y="11"/>
			<NozzlePos x="-56" y="-11"/>
		</DriveImages>

	</ShipClass>

	<!-- The Ranx Turret fires Broadsword missiles. -->
	
	<StationType UNID="&stRanxTurret;"
			name=				"Ranx turret"
			sovereign=			"&svDestructiveOrder;"
			dockScreen=			"&dsAbandonedStation;"
			abandonedScreen=	"&dsAbandonedStation;"
			noMapLabel=			"true"
			noFriendlyFire=		"true"
			canAttack=			"true"

			mass=				"2500"
			armorID=			"&itLightOrthoSteel;"
			hitPoints=			"100"
			structuralHitPoints="40"
			fireRateAdj=		"20"
			explosionType=		"&vtBlastExplosion2;"
			ejectaType=			"&vtWreckEjecta;"
			>

		<Image			imageID="&rsRanxTurret;" imageX="0" imageY="0" imageWidth="64" imageHeight="64"/>

		<Devices>
			<Device deviceID="&itNAMIMissileLauncher;"/>
		</Devices>

		<Items>
			<Item count="6d12"	item="&itKM550Missile;" />
		</Items>

		<DockingPorts>
			<Port x="0"		y="24" />
			<Port x="0"		y="-24" />
			<Port x="24"	y="0" />
			<Port x="-24"	y="0" />
		</DockingPorts>

	</StationType>
	
	<!-- REWRITES - new encounters, fortresses are surrounded by turrets -->

	<!-- Ranx Outpost - now accompanied by 2d2-2 bombers and 1d2-1 (50% chance of one) frigate.
		2d2-2 bombers are added to reinforcements. -->

	<StationType UNID="&stRanxOutpost;"
			name=				"Ranx outpost"
			sovereign=			"&svDestructiveOrder;"
			dockScreen=			"&dsAbandonedStation;"
			abandonedScreen=	"&dsAbandonedStation;"
			dockingPorts=		"8"
			canAttack=			"true"

			multiHull=			"true"
			armorID=			"&itLightOrthoSteel;"
			hitPoints=			"300"
			explosionType=		"&vtThermoExplosion1;"
			ejectaType=			"&vtWreckEjecta;"

			attributes=			"enemy, envEarth, envAvoidsAir, human, populated, ranx"
			levelFrequency=		"----- ucur- ----- ----- -----"
			locationCriteria=	"+planetary,-OuterSystem"
			enemyExclusionRadius="60"
			>

		<Image			imageID="&rsStations7;" imageX="0" imageY="256" imageWidth="192" imageHeight="192"/>

		<Devices>
		</Devices>

		<Items>
			<Item count="10d100"	item="&itAkan30CannonShell;" />
			<Table>
				<Lookup chance="40" count="1" table="&trConsumables8;"/>
				<Lookup chance="40" count="1" table="&trMinorItem8;"/>
				<Lookup chance="20" count="1" table="&trMajorItem8;"/>
			</Table>
		</Items>

		<Ships>
			<Ship count="1d4"	class="&scRanxGunship;"	orders="patrol" patrolDist="5"/>
			<Ship count="1d4"	class="&scRanxGunship;"	orders="guard" />
			<Ship count="2d2-2" class="&scRanxBomber;"	orders="patrol" patrolDist="7"/>
			<Ship count="1d2-1" class="&scRanxFrigate;"	orders="patrol" patrolDist="35"/>
		</Ships>

		<Reinforcements minShips="4">
			<Ship		count="1d4"		class="&scRanxGunship;" orders="patrol" patrolDist="5"/>
			<Ship		count="2d2-2"	class="&scRanxBomber;" orders="patrol" patrolDist="5"/>
		</Reinforcements>

		<Encounters frequency="uncommon">
			<Lookup table="&tbRanxEncounters;"/>
		</Encounters>

	</StationType>

	<!-- Ranx Fortress - now surrounded by 8 turrets and accompanied by a few bombers and frigates. -->

	<StationType UNID="&stRanxFortress;"
			name=				"Ranx fortress"
			sovereign=			"&svDestructiveOrder;"
			dockScreen=			"&dsAbandonedStation;"
			abandonedScreen=	"&dsAbandonedStation;"
			dockingPorts=		"8"
			canAttack=			"true"

			multiHull=			"true"
			armorID=			"&itOrthoSteel;"
			hitPoints=			"1000"
			explosionType=		"&vtThermoExplosion3;"
			ejectaType=			"&vtWreckEjecta;"

			attributes=			"enemy, envEarth, envAvoidsAir, human, majorStation, populated, ranx"
			levelFrequency=		"----- -rcr- ----- ----- -----"
			locationCriteria=	"+planetary,-OuterSystem"
			enemyExclusionRadius="100"
			>

		<Image			imageID="&rsStations8;" imageX="0" imageY="192" imageWidth="256" imageHeight="256"/>

		<Devices>
		</Devices>

		<Items>
			<Item count="10d100"	item="&itAkan30CannonShell;" />
			<Item count="4d20"		item="&itKilotonCannonShell;" />
			<Table>
				<Lookup chance="40" count="1" table="&trConsumables9;"/>
				<Lookup chance="40" count="1" table="&trMinorItem9;"/>
				<Lookup chance="20" count="1" table="&trMajorItem9;"/>
			</Table>
		</Items>

		<Ships>
			<Ship			count="1d4" 	class="&scRanxGunship;"	orders="patrol" patrolDist="5"/>
			<Ship			count="1d4" 	class="&scRanxGunship;"	orders="guard" />
			<Ship			count="2d2-2"	class="&scRanxBomber;"	orders="patrol" patrolDist="6"/>
			<Ship			count="2d2-2"	class="&scRanxBomber;"	orders="guard" />
			<Ship			count="2d2" 	class="&scRanxFrigate;"	orders="patrol" patrolDist="50"/>
			<Ship			count="1"		class="&scRanxDreadnought;"	orders="patrol" patrolDist="150">
				<Escorts>
					<Ship	count="1d4" 	class="&scRanxGunship;"	orders="escort"/>
					<Ship	count="1d2-1"	class="&scRanxBomber;"	orders="escort"/>
				</Escorts>
			</Ship>
		</Ships>
		
		<Satellites>
			<Orbitals distance="8" angle="67">
				<Station type="&stRanxTurret;"/>
			</Orbitals>

			<Orbitals distance="8" angle="157">
				<Station type="&stRanxTurret;"/>
			</Orbitals>

			<Orbitals distance="8" angle="247">
				<Station type="&stRanxTurret;"/>
			</Orbitals>

			<Orbitals distance="8" angle="337">
				<Station type="&stRanxTurret;"/>
			</Orbitals>
			
			<Orbitals distance="12" angle="67">
				<Station type="&stRanxTurret;"/>
			</Orbitals>

			<Orbitals distance="12" angle="157">
				<Station type="&stRanxTurret;"/>
			</Orbitals>

			<Orbitals distance="12" angle="247">
				<Station type="&stRanxTurret;"/>
			</Orbitals>

			<Orbitals distance="12" angle="337">
				<Station type="&stRanxTurret;"/>
			</Orbitals>
		</Satellites>

		<Reinforcements minShips="5">
			<Table>
				<Ship chance="50"  count="1d4"	class="&scRanxGunship;" orders="patrol" patrolDist="5"/>
				<Ship chance="30"  count="1"	class="&scRanxFrigate;"	orders="patrol" patrolDist="25">
					<Escorts>
						<Ship count="1d4" 	class="&scRanxGunship;"	orders="escort"/>
						<Ship count="1d2-1"	class="&scRanxBomber;"	orders="escort"/>
					</Escorts>
				</Ship>
				<Ship chance="20"  count="1"	class="&scRanxDreadnought;"	orders="patrol" patrolDist="25">
					<Escorts>
						<Ship count="1d4" 	class="&scRanxGunship;"	orders="escort"/>
						<Ship count="1d2-1"	class="&scRanxBomber;"	orders="escort"/>
					</Escorts>
				</Ship>
			</Table>
		</Reinforcements>

		<Encounters frequency="common">
			<Lookup table="&tbRanxEncounters;"/>
		</Encounters>
	</StationType>
	
	<!-- Ranx Encounter Table - now includes a bomber with a few gunships,
		and a frigate with a few gunships and possibly a bomber. -->
	
	<ShipTable unid="&tbRanxEncounters;">
		<LevelTable>
			<Ship levelFrequency="----- ccurr" count="1"	class="&scRanxGunship;" eventHandler="&evStdPatrolEncounterBehavior;">
				<Escorts>
					<Ship					   count="1d3"	class="&scRanxGunship;" orders="escort"/>
				</Escorts>
			</Ship>

			<Ship levelFrequency="----- rccur" count="1"	class="&scRanxBomber;" eventHandler="&evStdPatrolEncounterBehavior;">
				<Escorts>
					<Ship					   count="1d3"	class="&scRanxGunship;" orders="escort"/>
				</Escorts>
			</Ship>

			<Ship levelFrequency="----- -ucur" count="1"	class="&scRanxGunship;" eventHandler="&evStdPatrolEncounterBehavior;">
				<Escorts>
					<Ship					   count="1d6"	class="&scRanxGunship;" orders="escort"/>
				</Escorts>
			</Ship>

			<Ship levelFrequency="----- -ruur" count="1"	class="&scRanxFrigate;"	orders="wander"	maxShips="8">
				<Escorts>
					<Ship					   count="2d3"	class="&scRanxGunship;" orders="escort"/>
					<Ship					   count="1d2-1"	class="&scRanxBomber;" orders="escort"/>
				</Escorts>
			</Ship>
			
			<Ship levelFrequency="----- -rrur" count="1"	class="&scRanxDreadnought;"	orders="wander"	maxShips="6">
				<Escorts>
					<Ship					   count="1d4"	class="&scRanxGunship;"	orders="escort"/>
					<Ship					   count="1d3-1"	class="&scRanxBomber;"	orders="escort"/>
				</Escorts>
			</Ship>
		</LevelTable>
	</ShipTable>
	
</TranscendenceExtension>